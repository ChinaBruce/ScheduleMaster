@section scripts{
    <script src="~/Scripts/jquery.nicescroll.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#frame_loading").css("margin-bottom", window.innerHeight * 0.7888);
            $("#menu_box .menu-link").bind("click", function () {
                $(this).parents('li').addClass("active").siblings().removeClass("active");
                $('#frame_loading').show();
                $("#target_frame").attr("src", $(this).attr("data-href"));
            })
            document.getElementById("target_frame").onload = function () {
                this.style.display = "block";
                $('#frame_loading').hide();
                $("#target_frame").css("height", window.innerHeight * 0.87533).niceScroll();
            }
        })

    </script>
}

